<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_left_black"
            android:onClick="returnMain"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="仪表盘"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <!--卡片区域一，现在的单词书-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorBgWhite"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="130dp"
                            app:cardBackgroundColor="@color/colorLightRed"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/img_plan_book"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_cet6"/>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:orientation="vertical"
                            android:layout_marginLeft="30dp">

                            <TextView
                                android:id="@+id/text_plan_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="六级英语词汇"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="50dp"
                                android:layout_height="3dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:background="@color/colorBgWhite" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="15dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="每日学习单词："
                                    android:textColor="@color/colorGrey"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/daily_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50词"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="15dp">
                                <TextView
                                    android:id="@+id/now_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="已完成：2000/"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/total_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2078词"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_plan_expect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:text="预计将于2020年12月18日学完所有单词"
                        android:textColor="@color/colorGrey"
                        android:textSize="12sp" />

                    <!--按钮-->
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/plan_change"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttonshape"
                        android:text="修改计划"
                        android:textColor="@color/colorBgWhite"
                        android:textStyle="bold"
                        android:onClick="changeBook"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- 卡片区域二，单词数据-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorBgWhite"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:onClick="toOverview">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="我的数据"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="175dp"
                            android:src="@drawable/icon_right"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_one"
                            android:layout_width="138dp"
                            android:layout_height="90dp"
                            app:cardBackgroundColor="@color/colorBgWhite"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:src="@drawable/icon_bottom_discover"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="今日学习和复习"
                                        android:layout_marginTop="5dp"
                                        android:textColor="@color/colorBlack" />
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/today_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:text="21词"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorBlack" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_two"
                            android:layout_width="138dp"
                            android:layout_height="90dp"
                            app:cardBackgroundColor="@color/colorBgWhite"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:src="@drawable/icon_bottom_discover"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="累计学习词数"
                                        android:layout_marginTop="5dp"
                                        android:textColor="@color/colorBlack" />
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/already_study_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:text="999词"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorBlack" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_three"
                            android:layout_width="138dp"
                            android:layout_height="90dp"
                            app:cardBackgroundColor="@color/colorBgWhite"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/card_one">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:src="@drawable/icon_bottom_discover"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="今日学习时长"
                                        android:layout_marginTop="5dp"
                                        android:textColor="@color/colorBlack" />
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/today_study_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:text="6分钟"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorBlack" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_four"
                            android:layout_width="138dp"
                            android:layout_height="90dp"
                            app:cardBackgroundColor="@color/colorBgWhite"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/card_two">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="5dp"
                                        android:src="@drawable/icon_bottom_discover"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="累计学习时长"
                                        android:layout_marginTop="5dp"
                                        android:textColor="@color/colorBlack" />
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/total_study_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:text="1000分钟"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorBlack" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <!--按钮-->
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/study_record"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttonshape"
                        android:text="学习记录"
                        android:textColor="@color/colorBgWhite"
                        android:textStyle="bold"
                        android:onClick="toOverview"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--卡片区域三，日历-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorBgWhite"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:onClick="toCalender">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日历"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="连续签到 2 天"
                        android:textColor="@color/colorGrey"
                        android:layout_marginLeft="125dp"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_right"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
